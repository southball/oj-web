<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>ID</th>
      <th>Verdict</th>
      <th>Date</th>
      <th>User</th>
      <% if (isAdmin) { %>
      <th>Judge</th>
      <% } %>
    </tr>
  </thead>

  <tbody>
    <% for (const submission of submissions) { %>
    <tr>
      <td>
        <a href="<%= url(`problem/${submission.problem.id}/submission/${submission.id}`) %>">
          <%= submission.id %>
        </a>
      </td>
      <td>
        <span class="badge badge-<%= verdictBadgeType(submission.verdict) %>"><%= submission.verdict %></span>
      </td>
      <td><%= moment(submission.time).format('YYYY-MM-DD hh:mm:ss') %></td>
      <td>
        <a href="<%= url('user', submission.user.username) %>">
          <%= submission.user.username %>
        </a>
      </td>
      <% if (isAdmin) { %>
      <td>
        <%= submission.judger %>
      </td>
      <% } %>
    </tr>
    <% } %>
  </tbody>
</table>