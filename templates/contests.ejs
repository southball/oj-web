<!DOCTYPE html>
<html>

<head>
  <%- include('parts/libraries-css') %>
  <title><%= config.site_name %> - Contests</title>
</head>

<body>
  <%- include('parts/navbar') %>

  <div class="container">
    <h1>Contests List</h1>

    <% if (isAdmin) { %>
    <div>
      <a href="<%= url('contest/new') %>">
        <button class="btn btn-primary" type="button">
          Create New Contest
        </button>
      </a>
    </div>
    <br />
    <% } %>

    <table class="table table-bordered table-oj table-hover">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Time</th>
        </tr>
      </thead>

      <tbody>
        <% for (const contest of contests) { %>
        <tr>
          <td>
            <a href="<%= url(`contest/${contest.id}`) %>">
              <%= contest.id %>
            </a>
          </td>
          <td>
            <a href="<%= url(`contest/${contest.id}`) %>">
              <%= contest.title %>
            </a>
          </td>
          <td>
            <%= moment(contest.startTime).format("YYYY-MM-DD hh:mm:ss") %> -
            <%= moment(contest.endTime).format("YYYY-MM-DD hh:mm:ss") %>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <%- include('parts/libraries-js') %>
</body>

</html>